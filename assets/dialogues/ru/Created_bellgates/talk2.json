            "opposite": "Бельгетс",
            "next": "B9"
        },
        "B8": {
            "kind": "dialogue",
            "root_node": false,
            "body": "Абсолютно с тобой согласен. Я не хотел быть участником массового уничтожения и поэтому ушел.",
            "speaker": "Бельгетс",
            "opposite": "Страйкли",
            "next": "B8.1"

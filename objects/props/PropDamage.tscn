[sub_resource type="GDScript" id=1]
script/source = "extends Area3D

@export var damage = 5
var playerHere = false
var timer = 0.5


func _on_PropDamage_body_entered(body):
	if body.name == \"Player\":
		playerHere = true
	set_process(true)


func _on_PropDamage_body_exited(body):
	if body.name == \"Player\":
		playerHere = false

func _process(delta):
	if playerHere:
		if timer > 0:
			timer -= delta
		else:
			timer = 1
		
			if playerHere:
				G.player.stats.TakeDamage(damage, Vector3.ZERO)
	else:
		set_process(false)
"

